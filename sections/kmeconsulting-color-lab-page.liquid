{%- liquid
  assign combo = resource
  if combo == blank
    assign path_parts = request.path | split: '/'
    assign handle = path_parts | last
    assign all_combos = shop.metaobjects['color_combination'].values
    for c in all_combos
      if c.system.handle == handle
        assign combo = c
        break
      endif
    endfor
  endif
-%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  {%- if combo != blank -%}
    <!-- Hero: name + description + color palette -->
    <div class="color-lab-page__hero">
      <h1 class="color-lab-page__title">{{ combo.name }}</h1>

      {%- if combo.description != blank -%}
        <p class="color-lab-page__description">{{ combo.description }}</p>
      {%- endif -%}

      <div class="color-lab-page__palette">
        {%- if combo.color_1 != blank -%}
          <div class="color-lab-page__color">
            <span class="color-lab-page__swatch" style="background-color: {{ combo.color_1 }};"></span>
            <span class="color-lab-page__hex">{{ combo.color_1 }}</span>
          </div>
        {%- endif -%}
        {%- if combo.color_2 != blank -%}
          <div class="color-lab-page__color">
            <span class="color-lab-page__swatch" style="background-color: {{ combo.color_2 }};"></span>
            <span class="color-lab-page__hex">{{ combo.color_2 }}</span>
          </div>
        {%- endif -%}
        {%- if combo.color_3 != blank -%}
          <div class="color-lab-page__color">
            <span class="color-lab-page__swatch" style="background-color: {{ combo.color_3 }};"></span>
            <span class="color-lab-page__hex">{{ combo.color_3 }}</span>
          </div>
        {%- endif -%}
        {%- if combo.color_4 != blank -%}
          <div class="color-lab-page__color">
            <span class="color-lab-page__swatch" style="background-color: {{ combo.color_4 }};"></span>
            <span class="color-lab-page__hex">{{ combo.color_4 }}</span>
          </div>
        {%- endif -%}
        {%- if combo.color_5 != blank -%}
          <div class="color-lab-page__color">
            <span class="color-lab-page__swatch" style="background-color: {{ combo.color_5 }};"></span>
            <span class="color-lab-page__hex">{{ combo.color_5 }}</span>
          </div>
        {%- endif -%}
      </div>
    </div>

    <!-- Image gallery -->
    {%- if combo.images.value != blank and combo.images.value.size > 0 -%}
      <div class="color-lab-page__gallery">
        <h2 class="color-lab-page__gallery-heading">Inspiration</h2>
        <div class="color-lab-page__grid">
          {%- for image in combo.images.value -%}
            <div class="color-lab-page__image-wrapper color-lab-page__image-wrapper--{{ forloop.index }}">
              <img
                src="{{ image | image_url: width: 800 }}"
                alt="{{ combo.name }} inspiration {{ forloop.index }}"
                loading="lazy"
                width="800"
                height="{{ 800 | divided_by: image.aspect_ratio | round }}"
                class="color-lab-page__image"
              >
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- else -%}
      <div class="color-lab-page__no-images">
        <p>Billeder kommer snart.</p>
      </div>
    {%- endif -%}

    <!-- Recommended products -->
    {%- liquid
      assign p1 = section.settings.product_1
      assign p2 = section.settings.product_2
      if p1 == blank or p2 == blank
        assign fallback_products = collections.all.products
      endif
      if p1 == blank and fallback_products.size > 0
        assign p1 = fallback_products[0]
      endif
      if p2 == blank and fallback_products.size > 1
        assign p2 = fallback_products[1]
      endif
    -%}
    {%- if p1 != blank or p2 != blank -%}
      <div class="color-lab-page__products">
        <h2 class="color-lab-page__products-heading">Maling til denne kombination</h2>
        <div class="color-lab-page__products-grid">
          {%- if p1 != blank -%}
            <a href="{{ p1.url }}" class="color-lab-page__product-card">
              <div class="color-lab-page__product-image-wrapper">
                <img
                  src="{{ p1.featured_image | image_url: width: 600 }}"
                  alt="{{ p1.title }}"
                  loading="lazy"
                  width="600"
                  height="{{ 600 | divided_by: p1.featured_image.aspect_ratio | round }}"
                  class="color-lab-page__product-image"
                >
              </div>
              <div class="color-lab-page__product-info">
                <h3 class="color-lab-page__product-title">{{ p1.title }}</h3>
                <p class="color-lab-page__product-price">{{ p1.price | money }}</p>
              </div>
            </a>
          {%- endif -%}
          {%- if p2 != blank -%}
            <a href="{{ p2.url }}" class="color-lab-page__product-card">
              <div class="color-lab-page__product-image-wrapper">
                <img
                  src="{{ p2.featured_image | image_url: width: 600 }}"
                  alt="{{ p2.title }}"
                  loading="lazy"
                  width="600"
                  height="{{ 600 | divided_by: p2.featured_image.aspect_ratio | round }}"
                  class="color-lab-page__product-image"
                >
              </div>
              <div class="color-lab-page__product-info">
                <h3 class="color-lab-page__product-title">{{ p2.title }}</h3>
                <p class="color-lab-page__product-price">{{ p2.price | money }}</p>
              </div>
            </a>
          {%- endif -%}
        </div>
        {%- if p1 != blank and p2 != blank -%}
          <div class="color-lab-page__add-combo">
            <button
              type="button"
              class="color-lab-page__add-combo-btn"
              data-variant-1="{{ p1.selected_or_first_available_variant.id }}"
              data-variant-2="{{ p2.selected_or_first_available_variant.id }}"
            >
              Tilf&oslash;j kombination til kurven
            </button>
          </div>
          <script>
            (function() {
              var btn = document.querySelector('.color-lab-page__add-combo-btn');
              if (!btn) return;

              btn.addEventListener('click', function() {
                var id1 = btn.getAttribute('data-variant-1');
                var id2 = btn.getAttribute('data-variant-2');
                var items = [];

                if (id1) items.push({ id: Number(id1), quantity: 1 });
                if (id2) items.push({ id: Number(id2), quantity: 1 });

                if (items.length === 0) return;

                btn.disabled = true;
                btn.textContent = 'Tilføjer...';

                fetch('/cart/add.js', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ items: items })
                })
                .then(function(res) {
                  if (!res.ok) throw new Error('Failed');
                  return res.json();
                })
                .then(function() {
                  btn.textContent = 'Tilføjet!';
                  setTimeout(function() {
                    window.location.href = '/cart';
                  }, 600);
                })
                .catch(function() {
                  btn.textContent = 'Noget gik galt – prøv igen';
                  btn.disabled = false;
                  setTimeout(function() {
                    btn.textContent = 'Tilføj kombination til kurven';
                  }, 2000);
                });
              });
            })();
          </script>
        {%- endif -%}
      </div>
    {%- endif -%}
  {%- else -%}
    <p style="text-align: center; opacity: 0.5;">Ingen farvekombination fundet.</p>
  {%- endif -%}
</div>

{% stylesheet %}
  .color-lab-page__hero {
    text-align: center;
    max-width: 640px;
    margin: 0 auto;
  }

  .color-lab-page__title {
    margin: 0;
    font-size: 2rem;
    line-height: 1.2;
  }

  .color-lab-page__description {
    margin: 8px 0 0;
    opacity: 0.7;
    font-size: 1rem;
    line-height: 1.5;
  }

  .color-lab-page__palette {
    display: flex;
    justify-content: center;
    gap: 24px;
    margin-top: 32px;
  }

  .color-lab-page__color {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .color-lab-page__swatch {
    width: 72px;
    height: 72px;
    border-radius: 50%;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .color-lab-page__hex {
    font-size: 0.75rem;
    opacity: 0.5;
    font-family: monospace;
    text-transform: uppercase;
  }

  .color-lab-page__gallery {
    margin-top: 56px;
  }

  .color-lab-page__gallery-heading {
    text-align: center;
    margin: 0 0 24px;
    font-size: 1.3rem;
  }

  .color-lab-page__grid {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto;
    gap: 16px;
  }

  .color-lab-page__image-wrapper {
    border-radius: 12px;
    overflow: hidden;
  }

  .color-lab-page__image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .color-lab-page__no-images {
    text-align: center;
    margin-top: 48px;
    opacity: 0.5;
  }

  .color-lab-page__products {
    margin-top: 64px;
  }

  .color-lab-page__products-heading {
    text-align: center;
    margin: 0 0 28px;
    font-size: 1.3rem;
  }

  .color-lab-page__products-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    max-width: 700px;
    margin: 0 auto;
  }

  .color-lab-page__product-card {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 16px;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .color-lab-page__product-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
  }

  .color-lab-page__product-image-wrapper {
    flex: 0 0 120px;
    width: 120px;
    border-radius: 8px;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.02);
  }

  .color-lab-page__product-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .color-lab-page__product-info {
    flex: 1;
    min-width: 0;
  }

  .color-lab-page__product-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
  }

  .color-lab-page__product-price {
    font-size: 0.9rem;
    margin: 6px 0 0;
    opacity: 0.6;
  }

  .color-lab-page__add-combo {
    text-align: center;
    margin-top: 24px;
  }

  .color-lab-page__add-combo-btn {
    display: inline-block;
    padding: 14px 36px;
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    background: rgb(var(--color-button-rgb, 45 45 45));
    color: rgb(var(--color-button-label-rgb, 255 255 255));
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .color-lab-page__add-combo-btn:hover {
    opacity: 0.85;
    transform: translateY(-1px);
  }

  .color-lab-page__add-combo-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  @media screen and (min-width: 750px) {
    .color-lab-page__products-grid {
      grid-template-columns: 1fr 1fr;
    }

    .color-lab-page__product-card {
      flex-direction: column;
      text-align: center;
      padding: 24px;
    }

    .color-lab-page__product-image-wrapper {
      flex: none;
      width: 100%;
    }
  }

  @media screen and (min-width: 750px) {
    .color-lab-page__title {
      font-size: 2.5rem;
    }

    .color-lab-page__swatch {
      width: 96px;
      height: 96px;
    }

    .color-lab-page__grid {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr;
    }

    .color-lab-page__image-wrapper--1 {
      grid-column: 1;
      grid-row: 1;
    }

    .color-lab-page__image-wrapper--2 {
      grid-column: 1;
      grid-row: 2;
    }

    .color-lab-page__image-wrapper--3 {
      grid-column: 2;
      grid-row: 1 / 3;
    }
  }

  @media screen and (max-width: 749px) {
    .color-lab-page__palette {
      gap: 16px;
    }

    .color-lab-page__swatch {
      width: 56px;
      height: 56px;
    }
  }
{% endstylesheet %}


{% schema %}
{
  "name": "Farvelab – Side",
  "class": "kmeconsulting-color-lab-page",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Produkter"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Produkt 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Produkt 2"
    },
    {
      "type": "header",
      "content": "Sektionslayout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Bredde",
      "options": [
        {
          "value": "page-width",
          "label": "Sidebredde"
        },
        {
          "value": "full-width",
          "label": "Fuld bredde"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Mellemrum",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 28
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farveskema",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bund",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 48
    }
  ]
}
