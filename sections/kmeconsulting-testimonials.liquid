<div
  class="testimonials section section--page-width color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  {%- if section.settings.heading != blank -%}
    <div class="testimonials__header">
      <h2 class="testimonials__title">{{ section.settings.heading }}</h2>
      {%- if section.settings.subheading != blank -%}
        <p class="testimonials__subtitle">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>
  {%- endif -%}

  <div class="testimonials__grid">
    {%- for block in section.blocks -%}
      <div class="testimonials__card" {{ block.shopify_attributes }}>
        <div class="testimonials__stars">
          {%- for i in (1..block.settings.rating) -%}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="18" height="18">
              <path d="M10 1.5l2.47 5.01 5.53.8-4 3.9.94 5.49L10 13.88 5.06 16.7l.94-5.49-4-3.9 5.53-.8L10 1.5z"/>
            </svg>
          {%- endfor -%}
        </div>
        {%- if block.settings.quote != blank -%}
          <blockquote class="testimonials__quote">{{ block.settings.quote }}</blockquote>
        {%- endif -%}
        <div class="testimonials__author">
          {%- if block.settings.name != blank -%}
            <span class="testimonials__name">{{ block.settings.name }}</span>
          {%- endif -%}
          {%- if block.settings.location != blank -%}
            <span class="testimonials__location">{{ block.settings.location }}</span>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{% stylesheet %}
  .testimonials__header {
    text-align: center;
    margin-bottom: 32px;
  }

  .testimonials__title {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0 0 8px;
  }

  .testimonials__subtitle {
    font-size: 1rem;
    margin: 0;
    opacity: 0.7;
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .testimonials__card {
    background: rgba(0, 0, 0, 0.03);
    border-radius: 8px;
    padding: 28px 24px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .testimonials__stars {
    display: flex;
    gap: 2px;
    color: #e8a020;
  }

  .testimonials__quote {
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
    font-style: italic;
    opacity: 0.85;
  }

  .testimonials__author {
    display: flex;
    flex-direction: column;
    gap: 2px;
    margin-top: auto;
  }

  .testimonials__name {
    font-size: 0.9rem;
    font-weight: 600;
  }

  .testimonials__location {
    font-size: 0.8rem;
    opacity: 0.6;
  }

  @media screen and (max-width: 749px) {
    .testimonials__grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .testimonials__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Kundeanmeldelser",
  "class": "section-wrapper",
  "blocks": [
    {
      "type": "testimonial",
      "name": "Anmeldelse",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "label": "Stjerner",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Citat",
          "default": "Fantastisk kvalitet og flot farveresultat."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Navn",
          "default": "Kundenavn"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Lokation",
          "default": "København"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Overskrift",
      "default": "Det siger vores kunder"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Underoverskrift",
      "default": "Læs hvad andre synes om vores maling."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 48
    }
  ]
}
{% endschema %}
