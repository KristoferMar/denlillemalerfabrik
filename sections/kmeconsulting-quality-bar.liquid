<div
  class="quality-bar section section--page-width color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="quality-bar__inner">
    {%- for block in section.blocks -%}
      <div class="quality-bar__item" {{ block.shopify_attributes }}>
        <div class="quality-bar__icon">
          {%- case block.settings.icon -%}
            {%- when 'flag' -%}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" fill="none">
                <rect x="4" y="6" width="32" height="22" rx="2" fill="#C8102E"/>
                <rect x="14" y="6" width="4" height="22" fill="#fff"/>
                <rect x="4" y="15" width="32" height="4" fill="#fff"/>
              </svg>
            {%- when 'quality' -%}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" fill="none">
                <circle cx="20" cy="18" r="12" stroke="#C8102E" stroke-width="2" fill="none"/>
                <path d="M14 18l4 4 8-8" stroke="#C8102E" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M12 30l-2 6 5-3 5 3-2-6" fill="#C8102E" opacity="0.8"/>
                <path d="M20 30l-2 6 5-3 5 3-2-6" fill="#C8102E" opacity="0.8"/>
              </svg>
            {%- when 'leaf' -%}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" fill="none">
                <path d="M10 32C10 32 12 16 28 8c0 0-2 16-18 24z" fill="#4a7c59" opacity="0.85"/>
                <path d="M10 32C14 24 20 18 28 8" stroke="#fff" stroke-width="1.5" stroke-linecap="round" fill="none"/>
                <path d="M16 26c2-4 5-7 8-9" stroke="#fff" stroke-width="1" stroke-linecap="round" fill="none" opacity="0.6"/>
                <path d="M14 29c1-3 3-5 5-7" stroke="#fff" stroke-width="1" stroke-linecap="round" fill="none" opacity="0.6"/>
              </svg>
            {%- when 'truck' -%}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" fill="none">
                <rect x="3" y="12" width="20" height="14" rx="1.5" stroke="#C8102E" stroke-width="2"/>
                <path d="M23 16h6l5 5v5a1.5 1.5 0 01-1.5 1.5H23V16z" stroke="#C8102E" stroke-width="2"/>
                <circle cx="11" cy="28" r="3" fill="#C8102E"/>
                <circle cx="30" cy="28" r="3" fill="#C8102E"/>
                <circle cx="11" cy="28" r="1.5" fill="#fff"/>
                <circle cx="30" cy="28" r="1.5" fill="#fff"/>
              </svg>
          {%- endcase -%}
        </div>
        {%- if block.settings.heading != blank -%}
          <h4 class="quality-bar__heading">{{ block.settings.heading }}</h4>
        {%- endif -%}
        {%- if block.settings.text != blank -%}
          <p class="quality-bar__text">{{ block.settings.text }}</p>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% stylesheet %}
  .quality-bar {
    width: 100%;
  }

  .quality-bar__inner {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    text-align: center;
  }

  .quality-bar__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 16px 8px;
    border-right: 1px solid rgba(0, 0, 0, 0.15);
  }

  .quality-bar__item:last-child {
    border-right: none;
  }

  .quality-bar__icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .quality-bar__icon svg {
    width: 100%;
    height: 100%;
  }

  .quality-bar__heading {
    font-size: 0.95rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
  }

  .quality-bar__text {
    font-size: 0.8rem;
    margin: 0;
    opacity: 0.7;
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .quality-bar__inner {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .quality-bar__item:nth-child(even) {
      border-right: none;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Kvalitetssikring",
  "class": "section-wrapper",
  "blocks": [
    {
      "type": "quality_item",
      "name": "Kvalitetspunkt",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Ikon",
          "options": [
            { "value": "flag", "label": "Dansk flag" },
            { "value": "quality", "label": "Kvalitetsmærke" },
            { "value": "leaf", "label": "Miljø / Blad" },
            { "value": "truck", "label": "Levering" }
          ],
          "default": "flag"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Overskrift",
          "default": "Kvalitet"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Beskrivelse",
          "default": "Beskrivelse af kvalitetspunktet."
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 32
    }
  ]
}
{% endschema %}
