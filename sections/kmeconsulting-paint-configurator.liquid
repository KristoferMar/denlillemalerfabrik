{%- liquid
  assign heading = section.settings.heading
-%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  id="paint-configurator"
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    spacing-style
  "
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="kmeconsulting-configurator">
    {%- if heading != blank -%}
      <h2 class="kmeconsulting-configurator__heading">{{ heading }}</h2>
    {%- endif -%}

    <div class="kmeconsulting-configurator__selected-color" id="configurator-selected-color" hidden>
      <span
        class="kmeconsulting-configurator__color-preview"
        id="configurator-color-preview"
      ></span>
      <span class="kmeconsulting-configurator__color-name" id="configurator-color-name"></span>
      <button
        type="button"
        class="kmeconsulting-configurator__change-color link"
        id="configurator-change-color"
      >
        Skift farve
      </button>
    </div>

    <p class="kmeconsulting-configurator__no-color" id="configurator-no-color">
      Vælg en farve fra kataloget ovenfor.
    </p>

    <form class="kmeconsulting-configurator__form" id="paint-configurator-form">
      <div class="kmeconsulting-configurator__fields">
        <div class="kmeconsulting-configurator__field">
          <label for="configurator-surface">Hvad skal males?</label>
          <select id="configurator-surface" name="surface" required>
            <option value="" disabled selected>Vælg overflade</option>
            <option value="wall">Væg</option>
            <option value="ceiling">Loft</option>
            <option value="floor">Gulv</option>
          </select>
        </div>

        <div class="kmeconsulting-configurator__field">
          <label for="configurator-environment">Indendørs eller udendørs?</label>
          <select id="configurator-environment" name="environment" required>
            <option value="" disabled selected>Vælg miljø</option>
            <option value="indoor">Indendørs</option>
            <option value="outdoor">Udendørs</option>
          </select>
        </div>
      </div>

      <button type="submit" class="kmeconsulting-configurator__submit button" id="configurator-submit" disabled>
        Find produkter
      </button>
    </form>
  </div>
</div>

<style>
  .kmeconsulting-configurator {
    max-width: 500px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .kmeconsulting-configurator__heading {
    text-align: center;
    margin: 0;
  }

  .kmeconsulting-configurator__selected-color {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    border: 1px solid rgb(var(--color-foreground-rgb, 0 0 0) / 0.12);
    border-radius: 8px;
  }

  .kmeconsulting-configurator__selected-color[hidden] {
    display: none;
  }

  .kmeconsulting-configurator__color-preview {
    display: block;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid rgb(var(--color-foreground-rgb, 0 0 0) / 0.12);
    flex-shrink: 0;
  }

  .kmeconsulting-configurator__color-name {
    font-weight: 600;
    flex-grow: 1;
  }

  .kmeconsulting-configurator__change-color {
    background: none;
    border: none;
    cursor: pointer;
    text-decoration: underline;
    color: inherit;
    padding: 0;
    font-size: inherit;
  }

  .kmeconsulting-configurator__no-color {
    text-align: center;
    opacity: 0.6;
    margin: 0;
  }

  .kmeconsulting-configurator__form {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .kmeconsulting-configurator__fields {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
  }

  @media screen and (min-width: 750px) {
    .kmeconsulting-configurator__fields {
      grid-template-columns: 1fr 1fr;
    }
  }

  .kmeconsulting-configurator__field {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .kmeconsulting-configurator__field label {
    font-weight: 500;
    font-size: 0.875rem;
  }

  .kmeconsulting-configurator__field select {
    padding: 10px 12px;
    border: 1px solid rgb(var(--color-foreground-rgb, 0 0 0) / 0.2);
    border-radius: 4px;
    background-color: var(--color-background, #fff);
    color: var(--color-foreground, #000);
    font-size: 1rem;
    appearance: auto;
  }

  .kmeconsulting-configurator__submit {
    align-self: center;
    min-width: 200px;
  }

  .kmeconsulting-configurator__submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>

{{ 'kmeconsulting-paint-configurator.js' | asset_url | script_tag }}

{% schema %}
{
  "name": "Malingskonfigurator",
  "class": "kmeconsulting-paint-configurator",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Overskrift",
      "default": "Hvad skal du male?"
    },
    {
      "type": "header",
      "content": "Sektionslayout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Bredde",
      "options": [
        {
          "value": "page-width",
          "label": "Sidebredde"
        },
        {
          "value": "full-width",
          "label": "Fuld bredde"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farveskema",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bund",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "Malingskonfigurator",
      "category": "Farver"
    }
  ]
}
{% endschema %}
