{%- doc -%}
  Renders an SVG icon for a paint type.
  @param {string} type_name - The paint type name (e.g. "Vægmaling")
{%- enddoc -%}

{%- case type_name -%}

  {%- when 'Vægmaling' -%}
    {%- comment -%} Paint roller against a wall {%- endcomment -%}
    <svg class="product-finder__type-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="6" y="8" width="28" height="14" rx="2"/>
      <line x1="34" y1="15" x2="40" y2="15"/>
      <line x1="40" y1="15" x2="40" y2="26"/>
      <line x1="40" y1="26" x2="26" y2="26"/>
      <line x1="26" y1="26" x2="26" y2="42"/>
    </svg>

  {%- when 'Loftmaling' -%}
    {%- comment -%} Roller painting upward / ceiling {%- endcomment -%}
    <svg class="product-finder__type-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <line x1="4" y1="8" x2="44" y2="8"/>
      <rect x="10" y="12" width="20" height="8" rx="2"/>
      <line x1="20" y1="20" x2="20" y2="24"/>
      <line x1="20" y1="24" x2="30" y2="24"/>
      <line x1="30" y1="24" x2="30" y2="42"/>
    </svg>

  {%- when 'Træ & Metal' -%}
    {%- comment -%} Brush on wood plank {%- endcomment -%}
    <svg class="product-finder__type-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="6" y="28" width="36" height="14" rx="1"/>
      <line x1="6" y1="35" x2="42" y2="35"/>
      <rect x="14" y="8" width="8" height="18" rx="1"/>
      <line x1="16" y1="8" x2="16" y2="12"/>
      <line x1="18" y1="8" x2="18" y2="12"/>
      <line x1="20" y1="8" x2="20" y2="12"/>
    </svg>

  {%- when 'Strukturmaling' -%}
    {%- comment -%} Textured surface / roller with pattern {%- endcomment -%}
    <svg class="product-finder__type-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="8" y="10" width="32" height="28" rx="2"/>
      <path d="M12 18 Q16 14 20 18 Q24 22 28 18 Q32 14 36 18"/>
      <path d="M12 26 Q16 22 20 26 Q24 30 28 26 Q32 22 36 26"/>
      <path d="M12 34 Q16 30 20 34 Q24 38 28 34 Q32 30 36 34"/>
    </svg>

  {%- when 'Træbeskyttelse' -%}
    {%- comment -%} Shield / protection over wood {%- endcomment -%}
    <svg class="product-finder__type-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M24 6 L38 12 L38 24 C38 34 24 42 24 42 C24 42 10 34 10 24 L10 12 Z"/>
      <line x1="18" y1="18" x2="18" y2="34"/>
      <line x1="24" y1="14" x2="24" y2="36"/>
      <line x1="30" y1="18" x2="30" y2="34"/>
    </svg>

  {%- when 'Gulvmaling' -%}
    {%- comment -%} Floor with paint can {%- endcomment -%}
    <svg class="product-finder__type-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M4 32 L24 22 L44 32 L44 40 L4 40 Z"/>
      <line x1="14" y1="27" x2="14" y2="40"/>
      <line x1="24" y1="22" x2="24" y2="40"/>
      <line x1="34" y1="27" x2="34" y2="40"/>
      <rect x="18" y="8" width="12" height="14" rx="1"/>
      <path d="M18 12 C16 12 16 10 18 10 L30 10 C32 10 32 12 30 12"/>
    </svg>

  {%- else -%}
    {%- comment -%} Fallback: paint brush {%- endcomment -%}
    <svg class="product-finder__type-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="16" y="24" width="16" height="18" rx="2"/>
      <line x1="20" y1="24" x2="20" y2="16"/>
      <line x1="24" y1="24" x2="24" y2="16"/>
      <line x1="28" y1="24" x2="28" y2="16"/>
      <rect x="16" y="12" width="16" height="4" rx="1"/>
    </svg>

{%- endcase -%}
